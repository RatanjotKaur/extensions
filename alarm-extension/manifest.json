{
  "manifest_version": 3,
  "name": "React Alarm Extension (TS)",
  "version": "1.0",
  "description": "A Chrome Extension that creates alarms using React and TypeScript.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon-48.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["alarms", "notifications"],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}